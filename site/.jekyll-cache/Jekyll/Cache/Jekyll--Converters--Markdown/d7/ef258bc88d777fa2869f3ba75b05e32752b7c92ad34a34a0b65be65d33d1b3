          <span class="nt">&lt;h5</span> <span class="na">class=</span><span class="s">"text-sky"</span><span class="nt">&gt;</span>Second slide label<span class="nt">&lt;/h5&gt;</span>
          <span class="nt">&lt;p&gt;</span>Lorem ipsum dolor sit amet, consectetur adipiscing elit.<span class="nt">&lt;/p&gt;</span>
        <span class="nt">&lt;/div&gt;</span>
      <span class="nt">&lt;/div&gt;</span>
      <span class="nt">&lt;div</span> <span class="na">class=</span><span class="s">"carousel-item"</span><span class="nt">&gt;</span>
        <span class="nt">&lt;img</span> <span class="na">class=</span><span class="s">"d-block w-100"</span> <span class="na">alt=</span><span class="s">"Example image 3"</span> <span class="na">src=</span><span class="s">"/arizona-bootstrap/docs/0.0/assets/img/img_placeholders/gallery-img-2.jpg"</span><span class="nt">&gt;</span>
